{
    "manifest_version": 3,
    "name": "Work Activity Aggregator (privacy-first)",
    "version": "1.0",
    "description": "Collects aggregated domain + active time only (no keystrokes, no content).",
    "options_page": "options.html",
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "alarms",
        "idle",
        "windows"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_idle"
    }],
    "host_permissions": [
        "<all_urls>",
        "http://localhost:*/*",
        "http://127.0.0.1:*/*"
    ],
    "action": {
        "default_title": "Activity collector",
        "default_popup": "popup.html"
    }
}