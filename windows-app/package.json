{
    "name": "windows-activity-tracker",
    "version": "1.0.0",
    "description": "Windows desktop app for tracking user activity, applications, and clipboard",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder",
        "dist": "electron-builder --publish=never"
    },
    "keywords": [
        "activity",
        "tracking",
        "windows",
        "productivity"
    ],
    "author": "",
    "license": "MIT",
    "build": {
        "appId": "com.keylogger.windows-tracker",
        "productName": "Windows Activity Tracker",
        "directories": {
            "output": "dist"
        },
        "files": [
            "**/*",
            "!node_modules/**/*"
        ],
        "win": {
            "target": "nsis"
        }
    },
    "dependencies": {
        "axios": "^1.6.0",
        "clipboardy": "^2.3.0",
        "systeminformation": "^5.21.15"
    },
    "devDependencies": {
        "electron": "^28.3.3",
        "electron-builder": "^24.6.4"
    }
}